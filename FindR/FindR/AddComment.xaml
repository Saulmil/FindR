<Page
    x:Class="FindR.AddComment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FindR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Clear" Label="Cancel" Tapped="Cancel_Tapped"/>
            <AppBarButton Icon="Accept" Label="Submit" Tapped="Submit_Tapped" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <Pivot>
            <PivotItem Header="Leave a Comment">
                <StackPanel>
                    <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Margin="0,0,0,12">Help fellow FindR users know about the condition of this place and other amenities it provides.</TextBlock>
                    <TextBox x:Name="comment" Height="96" PlaceholderText="Comment"></TextBox>
                </StackPanel>                
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
